---
interface Props {
  type?: 'product' | 'text' | 'image';
  count?: number;
}

const { type = 'product', count = 1 } = Astro.props;
---

{type === 'product' && (
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
    {Array.from({ length: count }).map(() => (
      <div class="bg-white dark:bg-dark-800 rounded-2xl overflow-hidden border border-gray-200 dark:border-dark-700 animate-pulse">
        <!-- Image Skeleton -->
        <div class="aspect-square bg-gray-200 dark:bg-dark-700"></div>
        
        <!-- Content Skeleton -->
        <div class="p-5 space-y-3">
          <!-- Rating -->
          <div class="flex gap-1">
            {Array.from({ length: 5 }).map(() => (
              <div class="w-4 h-4 bg-gray-200 dark:bg-dark-700 rounded"></div>
            ))}
          </div>
          
          <!-- Title -->
          <div class="space-y-2">
            <div class="h-4 bg-gray-200 dark:bg-dark-700 rounded w-full"></div>
            <div class="h-4 bg-gray-200 dark:bg-dark-700 rounded w-3/4"></div>
          </div>
          
          <!-- Price -->
          <div class="h-6 bg-gray-200 dark:bg-dark-700 rounded w-1/3"></div>
          
          <!-- Stock -->
          <div class="h-4 bg-gray-200 dark:bg-dark-700 rounded w-1/2"></div>
          
          <!-- Button -->
          <div class="h-12 bg-gray-200 dark:bg-dark-700 rounded-xl"></div>
        </div>
      </div>
    ))}
  </div>
)}

{type === 'text' && (
  <div class="space-y-3 animate-pulse">
    {Array.from({ length: count }).map(() => (
      <div class="h-4 bg-gray-200 dark:bg-dark-700 rounded w-full"></div>
    ))}
  </div>
)}

{type === 'image' && (
  <div class="aspect-video bg-gray-200 dark:bg-dark-700 rounded-2xl animate-pulse"></div>
)}

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
