---
import BaseLayout from '../layouts/BaseLayout.astro';

const jobOpenings = [
  {
    id: 1,
    title: 'Senior Sales Manager',
    department: 'Sales',
    location: 'New York, NY',
    type: 'Full-time',
    experience: '5+ years',
    description: 'Lead our sales team and drive revenue growth in the building materials sector.',
    requirements: ['5+ years sales experience', 'Team leadership skills', 'Industry knowledge', 'CRM proficiency']
  },
  {
    id: 2,
    title: 'Warehouse Operations Supervisor',
    department: 'Operations',
    location: 'New Jersey',
    type: 'Full-time',
    experience: '3+ years',
    description: 'Oversee daily warehouse operations, inventory management, and logistics coordination.',
    requirements: ['Warehouse management experience', 'Forklift certification', 'Team leadership', 'Safety compliance']
  },
  {
    id: 3,
    title: 'Customer Service Representative',
    department: 'Customer Service',
    location: 'Remote',
    type: 'Full-time',
    experience: '1-2 years',
    description: 'Provide exceptional customer support and assist with product inquiries and orders.',
    requirements: ['Customer service experience', 'Excellent communication', 'Problem-solving skills', 'Product knowledge']
  },
  {
    id: 4,
    title: 'Digital Marketing Specialist',
    department: 'Marketing',
    location: 'New York, NY / Remote',
    type: 'Full-time',
    experience: '2-3 years',
    description: 'Develop and execute digital marketing campaigns to drive online sales and brand awareness.',
    requirements: ['Digital marketing experience', 'SEO/SEM knowledge', 'Analytics proficiency', 'Content creation']
  },
  {
    id: 5,
    title: 'Delivery Driver',
    department: 'Logistics',
    location: 'Multiple Locations',
    type: 'Full-time',
    experience: 'Entry Level',
    description: 'Safely deliver building materials to customers and construction sites.',
    requirements: ['Valid CDL license', 'Clean driving record', 'Physical fitness', 'Customer service skills']
  },
  {
    id: 6,
    title: 'Product Specialist',
    department: 'Sales',
    location: 'New York, NY',
    type: 'Full-time',
    experience: '2-4 years',
    description: 'Provide technical expertise and product recommendations to customers and contractors.',
    requirements: ['Construction industry knowledge', 'Technical expertise', 'Sales experience', 'Communication skills']
  }
];
---

<BaseLayout title="Careers - Join Our Team | BuildMart">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-600 via-primary-500 to-orange-500 dark:from-primary-700 dark:via-primary-600 dark:to-orange-600 text-white py-20 sm:py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-72 h-72 bg-white rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-10 w-96 h-96 bg-white rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">Build Your Career With Us</h1>
        <p class="text-lg sm:text-xl text-white/90 mb-8 leading-relaxed">
          Join a team that's building the future of construction materials. We're looking for passionate, talented individuals to grow with us.
        </p>
        <a href="#openings" class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-600 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-300 hover:scale-105 hover:shadow-2xl">
          <span>View Open Positions</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Join Us -->
  <section class="py-16 sm:py-20 bg-white dark:bg-dark-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Why Work at BuildMart?</h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          We're more than just a workplace â€“ we're a community dedicated to excellence, growth, and making a difference.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Career Growth</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Clear advancement paths, mentorship programs, and continuous learning opportunities to help you reach your potential.
          </p>
        </div>

        <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Competitive Benefits</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Comprehensive health insurance, 401(k) matching, paid time off, and performance bonuses.
          </p>
        </div>

        <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Great Team Culture</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Collaborative environment, team events, and a supportive culture that values every team member.
          </p>
        </div>

        <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="w-14 h-14 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Innovation Focus</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Work with cutting-edge technology and contribute ideas that shape the future of our industry.
          </p>
        </div>

        <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="w-14 h-14 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Work-Life Balance</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Flexible schedules, remote work options, and a culture that respects your personal time.
          </p>
        </div>

        <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="w-14 h-14 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Industry Leader</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Join a respected company with 20+ years of excellence in the building materials industry.
          </p>
        </div>
      </div>
    </div>
  </section>
  <!-- Open Positions -->
  <section id="openings" class="py-16 sm:py-20 bg-gray-50 dark:bg-dark-800">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Open Positions</h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Explore our current job openings and find the perfect role for your skills and career goals.
        </p>
      </div>

      <div class="max-w-5xl mx-auto space-y-6">
        {jobOpenings.map(job => (
          <div class="bg-white dark:bg-dark-900 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
              <div class="flex-1">
                <div class="flex flex-wrap items-center gap-3 mb-3">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">{job.title}</h3>
                  <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-400 rounded-full text-sm font-semibold">
                    {job.type}
                  </span>
                </div>
                
                <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400 mb-3">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    {job.department}
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    </svg>
                    {job.location}
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {job.experience}
                  </span>
                </div>
                
                <p class="text-gray-700 dark:text-gray-300 mb-3">{job.description}</p>
                
                <div class="flex flex-wrap gap-2">
                  {job.requirements.map(req => (
                    <span class="px-3 py-1 bg-gray-100 dark:bg-dark-800 text-gray-700 dark:text-gray-300 rounded-lg text-sm">
                      {req}
                    </span>
                  ))}
                </div>
              </div>
              
              <div class="lg:ml-6">
                <button 
                  class="apply-btn w-full lg:w-auto px-6 py-3 bg-gradient-to-r from-primary-600 to-orange-500 text-white rounded-xl font-semibold hover:from-primary-700 hover:to-orange-600 transition-all duration-300 hover:scale-105 hover:shadow-xl"
                  data-job-id={job.id}
                  data-job-title={job.title}
                >
                  Apply Now
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          Don't see a position that fits? We're always looking for talented people.
        </p>
        <button class="inline-flex items-center gap-2 px-6 py-3 border-2 border-primary-600 text-primary-600 dark:text-primary-400 rounded-xl font-semibold hover:bg-primary-50 dark:hover:bg-primary-900/20 transition-all duration-300">
          <span>Send General Application</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </button>
      </div>
    </div>
  </section>

  <!-- Benefits & Perks -->
  <section class="py-16 sm:py-20 bg-white dark:bg-dark-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Benefits & Perks</h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          We invest in our team members with comprehensive benefits and perks designed to support your well-being.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900/30 dark:to-blue-800/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Health Insurance</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Comprehensive medical, dental, and vision coverage for you and your family</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-green-100 to-green-200 dark:from-green-900/30 dark:to-green-800/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">401(k) Matching</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Generous company match to help you save for retirement</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-100 to-purple-200 dark:from-purple-900/30 dark:to-purple-800/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Paid Time Off</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Generous PTO, holidays, and personal days to recharge</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-orange-100 to-orange-200 dark:from-orange-900/30 dark:to-orange-800/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Learning & Development</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Training programs, certifications, and tuition reimbursement</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-red-100 to-red-200 dark:from-red-900/30 dark:to-red-800/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Remote Work Options</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Flexible work arrangements for eligible positions</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-yellow-100 to-yellow-200 dark:from-yellow-900/30 dark:to-yellow-800/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Performance Bonuses</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Quarterly and annual bonuses based on performance</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-indigo-100 to-indigo-200 dark:from-indigo-900/30 dark:to-indigo-800/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Team Events</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Regular team building activities and company events</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-pink-100 to-pink-200 dark:from-pink-900/30 dark:to-pink-800/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-pink-600 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Employee Discounts</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Exclusive discounts on all BuildMart products</p>
        </div>
      </div>
    </div>
  </section>
  <!-- Application Process -->
  <section class="py-16 sm:py-20 bg-gray-50 dark:bg-dark-800">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Application Process</h2>
          <p class="text-gray-600 dark:text-gray-400">
            Our hiring process is designed to be transparent, efficient, and respectful of your time.
