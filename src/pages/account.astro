<script>
  // Sign Out functionality
  const signOutBtn = document.getElementById('sign-out-btn');
  const signOutBtnMobile = document.getElementById('sign-out-btn-mobile');
  
  function handleSignOut() {
    // Show confirmation dialog
    const confirmed = confirm('Are you sure you want to sign out?');
    
    if (confirmed) {
      // Clear any stored user data (localStorage, sessionStorage)
      localStorage.removeItem('user');
      localStorage.removeItem('authToken');
      sessionStorage.clear();
      
      // Show loading state on both buttons
      const loadingHTML = `
        <svg class="w-4 h-4 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        <span>Signing Out...</span>
      `;
      
      if (signOutBtn) {
        signOutBtn.disabled = true;
        signOutBtn.innerHTML = loadingHTML;
      }
      
      if (signOutBtnMobile) {
        signOutBtnMobile.disabled = true;
        signOutBtnMobile.innerHTML = loadingHTML;
      }
      
      // Simulate sign out process
      setTimeout(() => {
        // Redirect to home page
        window.location.href = '/';
      }, 1000);
    }
  }
  
  // Add event listeners to both buttons
  if (signOutBtn) {
    signOutBtn.addEventListener('click', handleSignOut);
  }
  
  if (signOutBtnMobile) {
    signOutBtnMobile.addEventListener('click', handleSignOut);
  }
</script>

