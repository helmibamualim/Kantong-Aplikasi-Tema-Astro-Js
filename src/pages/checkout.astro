---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Checkout - BuildMart">
  <div class="container mx-auto px-4 py-6 sm:py-8">
    <h1 class="text-2xl sm:text-3xl font-bold mb-6 sm:mb-8 animate-fade-in">Checkout</h1>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 sm:gap-8">
      <!-- Checkout Form - Mobile Optimized -->
      <div class="lg:col-span-2 space-y-4 sm:space-y-6">
        <!-- Contact Information - Touch-Friendly -->
        <div class="bg-white dark:bg-dark-800 rounded-2xl p-5 sm:p-6 border border-gray-200 dark:border-dark-700 animate-slide-up">
          <h2 class="text-lg sm:text-xl font-bold mb-4 sm:mb-6">Contact Information</h2>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-semibold mb-2">Email</label>
              <input type="email" placeholder="your@email.com" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
            <label class="flex items-center gap-3 cursor-pointer">
              <input type="checkbox" class="w-5 h-5 accent-primary-600 rounded cursor-pointer" />
              <span class="text-sm">Email me with news and offers</span>
            </label>
          </div>
        </div>

        <!-- Shipping Address - Touch-Friendly -->
        <div class="bg-white dark:bg-dark-800 rounded-2xl p-5 sm:p-6 border border-gray-200 dark:border-dark-700 animate-slide-up" style="animation-delay: 0.1s;">
          <h2 class="text-lg sm:text-xl font-bold mb-4 sm:mb-6">Shipping Address</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-semibold mb-2">First Name</label>
              <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2">Last Name</label>
              <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-semibold mb-2">Address</label>
              <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-semibold mb-2">Apartment, suite, etc. (optional)</label>
              <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2">City</label>
              <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2">State</label>
              <select class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base cursor-pointer">
                <option>Select State</option>
                <option>California</option>
                <option>Texas</option>
                <option>New York</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2">ZIP Code</label>
              <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2">Phone</label>
              <input type="tel" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
          </div>
        </div>

        <!-- Shipping Method - Touch-Friendly -->
        <div class="bg-white dark:bg-dark-800 rounded-2xl p-5 sm:p-6 border border-gray-200 dark:border-dark-700 animate-slide-up" style="animation-delay: 0.2s;">
          <h2 class="text-lg sm:text-xl font-bold mb-4 sm:mb-6">Shipping Method</h2>
          <div class="space-y-3">
            {[
              { name: 'Standard Shipping', time: '5-7 business days', price: 25 },
              { name: 'Express Shipping', time: '2-3 business days', price: 45 },
              { name: 'Next Day Delivery', time: '1 business day', price: 75 }
            ].map((method, i) => (
              <label class="flex items-center justify-between p-4 border-2 border-gray-200 dark:border-dark-700 rounded-lg cursor-pointer hover:border-primary-500 transition-colors active:scale-[0.98]">
                <div class="flex items-center gap-3">
                  <input type="radio" name="shipping" checked={i === 0} class="w-5 h-5 accent-primary-600 cursor-pointer" />
                  <div>
                    <p class="font-semibold text-sm sm:text-base">{method.name}</p>
                    <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">{method.time}</p>
                  </div>
                </div>
                <span class="font-bold text-sm sm:text-base">${method.price.toFixed(2)}</span>
              </label>
            ))}
          </div>
        </div>

        <!-- Payment - Touch-Friendly -->
        <div class="bg-white dark:bg-dark-800 rounded-2xl p-5 sm:p-6 border border-gray-200 dark:border-dark-700 animate-slide-up" style="animation-delay: 0.3s;">
          <h2 class="text-lg sm:text-xl font-bold mb-4 sm:mb-6">Payment</h2>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-semibold mb-2">Card Number</label>
              <input type="text" placeholder="1234 5678 9012 3456" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold mb-2">Expiration Date</label>
                <input type="text" placeholder="MM / YY" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
              </div>
              <div>
                <label class="block text-sm font-semibold mb-2">CVV</label>
                <input type="text" placeholder="123" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
              </div>
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2">Cardholder Name</label>
              <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 dark:border-dark-700 bg-white dark:bg-dark-900 focus:outline-none focus:border-primary-500 text-base" />
            </div>
          </div>
        </div>
      </div>

      <!-- Order Summary - Mobile Optimized -->
      <div class="lg:col-span-1">
        <div class="bg-white dark:bg-dark-800 rounded-2xl p-5 sm:p-6 border border-gray-200 dark:border-dark-700 lg:sticky lg:top-24 animate-slide-up" style="animation-delay: 0.4s;">
          <h2 class="text-lg sm:text-xl font-bold mb-4 sm:mb-6">Order Summary</h2>
          
          <div id="checkout-items" class="space-y-3 sm:space-y-4 mb-4 sm:mb-6 max-h-64 overflow-y-auto">
            <!-- Items will be rendered here -->
          </div>

          <div class="space-y-2 sm:space-y-3 mb-4 sm:mb-6 pt-4 sm:pt-6 border-t border-gray-200 dark:border-dark-700">
            <div class="flex justify-between text-sm sm:text-base">
              <span class="text-gray-600 dark:text-gray-400">Subtotal</span>
              <span id="checkout-subtotal" class="font-semibold">$0.00</span>
            </div>
            <div class="flex justify-between text-sm sm:text-base">
              <span class="text-gray-600 dark:text-gray-400">Shipping</span>
              <span id="checkout-shipping" class="font-semibold">$25.00</span>
            </div>
            <div class="flex justify-between text-sm sm:text-base">
              <span class="text-gray-600 dark:text-gray-400">Tax</span>
              <span id="checkout-tax" class="font-semibold">$0.00</span>
            </div>
            <div class="border-t border-gray-200 dark:border-dark-700 pt-2 sm:pt-3">
              <div class="flex justify-between text-base sm:text-lg">
                <span class="font-bold">Total</span>
                <span id="checkout-total" class="font-bold text-primary-600 dark:text-primary-400">$0.00</span>
              </div>
            </div>
          </div>

          <button class="w-full py-3 sm:py-4 bg-primary-600 hover:bg-primary-700 text-white rounded-xl font-bold transition-all duration-300 hover:shadow-lg transform hover:scale-105 active:scale-95 text-sm sm:text-base">
            Complete Order
          </button>

          <div class="mt-4 sm:mt-6 flex items-center justify-center gap-3 sm:gap-4 text-gray-400">
            <svg class="w-6 h-6 sm:w-8 sm:h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M4 4h16v16H4z"/></svg>
            <svg class="w-6 h-6 sm:w-8 sm:h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M4 4h16v16H4z"/></svg>
            <svg class="w-6 h-6 sm:w-8 sm:h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M4 4h16v16H4z"/></svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  function renderCheckout() {
    const cart = JSON.parse(localStorage.getItem('cart') || '[]');
    const checkoutItems = document.getElementById('checkout-items');

    if (cart.length === 0) {
      window.location.href = '/cart';
      return;
    }

    checkoutItems!.innerHTML = cart.map((item: any) => `
      <div class="flex gap-3">
        <div class="relative">
          <img src="${item.image}" alt="${item.name}" class="w-16 h-16 object-cover rounded-lg" />
          <span class="absolute -top-2 -right-2 w-6 h-6 bg-primary-600 text-white text-xs rounded-full flex items-center justify-center">${item.quantity}</span>
        </div>
        <div class="flex-1">
          <p class="font-semibold text-sm line-clamp-2">${item.name}</p>
          <p class="text-primary-600 dark:text-primary-400 font-bold">$${(item.price * item.quantity).toFixed(2)}</p>
        </div>
      </div>
    `).join('');

    const subtotal = cart.reduce((sum: number, item: any) => sum + (item.price * item.quantity), 0);
    const shipping = 25;
    const tax = subtotal * 0.08;
    const total = subtotal + shipping + tax;

    document.getElementById('checkout-subtotal')!.textContent = `$${subtotal.toFixed(2)}`;
    document.getElementById('checkout-shipping')!.textContent = `$${shipping.toFixed(2)}`;
    document.getElementById('checkout-tax')!.textContent = `$${tax.toFixed(2)}`;
    document.getElementById('checkout-total')!.textContent = `$${total.toFixed(2)}`;
  }

  renderCheckout();
</script>
