    toggle.addEventListener('click', () => {
      const content = toggle.nextElementSibling as HTMLElement;
      const icon = toggle.querySelector('svg');
      
      // Toggle content
      if (content.classList.contains('hidden')) {
        content.classList.remove('hidden');
