---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Mock addresses data
const addresses = [
  {
    id: 1,
    label: 'Home',
    name: 'John Doe',
    phone: '(555) 123-4567',
    address: '123 Main Street, Apt 4B',
    city: 'Los Angeles',
    state: 'CA',
    zip: '90001',
    country: 'United States',
    isDefault: true
  },
  {
    id: 2,
    label: 'Office',
    name: 'John Doe',
    phone: '(555) 987-6543',
    address: '456 Business Ave, Suite 200',
    city: 'Los Angeles',
    state: 'CA',
    zip: '90012',
    country: 'United States',
    isDefault: false
  },
  {
    id: 3,
    label: 'Warehouse',
    name: 'BuildMart Construction',
    phone: '(555) 456-7890',
    address: '789 Industrial Blvd',
    city: 'Long Beach',
    state: 'CA',
    zip: '90805',
    country: 'United States',
    isDefault: false
  }
];
---

<BaseLayout title="My Addresses - BuildMart">
  <!-- Header -->
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 dark:from-dark-900 dark:via-dark-800 dark:to-dark-900 text-white py-8">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold mb-2">My Addresses</h1>
          <p class="text-gray-300 dark:text-gray-400">Manage your shipping addresses</p>
        </div>
        <a href="/account" class="hidden sm:flex items-center gap-2 px-4 py-2 bg-white/10 hover:bg-white/20 rounded-lg border border-white/20 transition-all text-sm font-medium">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Account
        </a>
      </div>
    </div>
  </section>

  <!-- Add New Address Button -->
  <section class="bg-white dark:bg-dark-900 border-b border-gray-200 dark:border-dark-800 py-4">
    <div class="container mx-auto px-4">
      <button id="add-address-btn" class="flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-semibold transition-colors shadow-lg hover:shadow-xl">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add New Address
      </button>
    </div>
  </section>

  <!-- Addresses Grid -->
  <section class="py-8 bg-gray-50 dark:bg-dark-800">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
        {addresses.map((address) => (
          <div class="address-card bg-white dark:bg-dark-900 rounded-xl shadow-sm border-2 border-gray-200 dark:border-dark-700 hover:border-primary-500 dark:hover:border-primary-500 transition-all overflow-hidden" data-id={address.id}>
            <!-- Card Header -->
            <div class="p-6 border-b border-gray-200 dark:border-dark-700">
              <div class="flex items-start justify-between mb-3">
                <div class="flex items-center gap-2">
                  <div class="w-10 h-10 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900 dark:text-white">{address.label}</h3>
                    {address.isDefault && (
                      <span class="inline-block px-2 py-0.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded text-xs font-semibold">
                        Default
                      </span>
                    )}
                  </div>
                </div>
                <button class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                  </svg>
                </button>
              </div>
            </div>

            <!-- Card Body -->
            <div class="p-6">
              <div class="space-y-3">
                <div class="flex items-start gap-2">
                  <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <div>
                    <p class="font-semibold text-gray-900 dark:text-white">{address.name}</p>
                  </div>
                </div>

                <div class="flex items-start gap-2">
                  <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <p class="text-gray-600 dark:text-gray-400">{address.phone}</p>
                </div>

                <div class="flex items-start gap-2">
                  <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div class="text-gray-600 dark:text-gray-400">
                    <p>{address.address}</p>
                    <p>{address.city}, {address.state} {address.zip}</p>
                    <p>{address.country}</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Card Actions -->
            <div class="p-4 bg-gray-50 dark:bg-dark-800 border-t border-gray-200 dark:border-dark-700 flex gap-2">
              {!address.isDefault && (
                <button class="set-default-btn flex-1 px-4 py-2 bg-white dark:bg-dark-900 border border-gray-300 dark:border-dark-700 text-gray-700 dark:text-gray-300 rounded-lg font-semibold hover:bg-gray-50 dark:hover:bg-dark-800 transition-colors text-sm flex items-center justify-center gap-2" data-id={address.id}>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Set Default
                </button>
              )}
              <button class="edit-btn flex-1 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-semibold transition-colors text-sm flex items-center justify-center gap-2" data-id={address.id}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit
              </button>
              <button class="delete-btn px-4 py-2 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-600 dark:text-red-400 rounded-lg font-semibold hover:bg-red-100 dark:hover:bg-red-900/30 transition-colors text-sm flex items-center justify-center" data-id={address.id}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Add/Edit Address Modal -->
  <div id="address-modal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white dark:bg-dark-900 rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
      <!-- Modal Header -->
      <div class="p-6 border-b border-gray-200 dark:border-dark-700 flex items-center justify-between sticky top-0 bg-white dark:bg-dark-900 z-10">
        <h2 id="modal-title" class="text-2xl font-bold text-gray-900 dark:text-white">Add New Address</h2>
        <button id="close-modal" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Modal Body -->
      <form id="address-form" class="p-6 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Label -->
          <div class="md:col-span-2">
            <label for="label" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
              Address Label *
            </label>
            <input 
              type="text" 
              id="label" 
              required
              placeholder="e.g., Home, Office, Warehouse"
              class="w-full px-4 py-3 bg-gray-50 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white"
            />
          </div>

          <!-- Full Name -->
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
              Full Name *
            </label>
            <input 
              type="text" 
              id="name" 
              required
              placeholder="John Doe"
              class="w-full px-4 py-3 bg-gray-50 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
              Phone Number *
            </label>
            <input 
              type="tel" 
              id="phone" 
              required
              placeholder="(555) 123-4567"
              class="w-full px-4 py-3 bg-gray-50 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white"
            />
          </div>

          <!-- Address -->
          <div class="md:col-span-2">
            <label for="address" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
              Street Address *
            </label>
            <input 
              type="text" 
              id="address" 
              required
              placeholder="123 Main Street, Apt 4B"
              class="w-full px-4 py-3 bg-gray-50 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white"
            />
          </div>

          <!-- City -->
          <div>
            <label for="city" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
              City *
            </label>
            <input 
              type="text" 
              id="city" 
              required
              placeholder="Los Angeles"
              class="w-full px-4 py-3 bg-gray-50 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white"
            />
          </div>

          <!-- State -->
          <div>
            <label for="state" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
              State *
            </label>
            <input 
              type="text" 
              id="state" 
              required
              placeholder="CA"
              class="w-full px-4 py-3 bg-gray-50 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white"
            />
          </div>

          <!-- ZIP Code -->
          <div>
            <label for="zip" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
              ZIP Code *
            </label>
            <input 
              type="text" 
              id="zip" 
              required
              placeholder="90001"
              class="w-full px-4 py-3 bg-gray-50 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white"
            />
          </div>

          <!-- Country -->
          <div>
            <label for="country" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
              Country *
            </label>
            <select 
              id="country" 
              required
              class="w-full px-4 py-3 bg-gray-50 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-gray-900 dark:text-white"
            >
              <option value="United States">United States</option>
              <option value="Canada">Canada</option>
              <option value="Mexico">Mexico</option>
            </select>
          </div>

          <!-- Set as Default -->
          <div class="md:col-span-2">
            <label class="flex items-center gap-3 cursor-pointer">
              <input type="checkbox" id="is-default" class="w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
              <span class="text-sm font-semibold text-gray-700 dark:text-gray-300">
                Set as default shipping address
              </span>
            </label>
          </div>
        </div>

        <!-- Modal Actions -->
        <div class="flex gap-3 pt-4">
          <button type="button" id="cancel-btn" class="flex-1 px-6 py-3 bg-gray-100 dark:bg-dark-800 text-gray-700 dark:text-gray-300 rounded-lg font-semibold hover:bg-gray-200 dark:hover:bg-dark-700 transition-colors">
            Cancel
          </button>
          <button type="submit" class="flex-1 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-semibold transition-colors">
            Save Address
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Modal elements
    const modal = document.getElementById('address-modal');
    const modalTitle = document.getElementById('modal-title');
    const addressForm = document.getElementById('address-form');
    const addAddressBtn = document.getElementById('add-address-btn');
    const closeModalBtn = document.getElementById('close-modal');
    const cancelBtn = document.getElementById('cancel-btn');

    // Open modal for new address
    addAddressBtn?.addEventListener('click', () => {
      modalTitle.textContent = 'Add New Address';
      addressForm.reset();
      modal.classList.remove('hidden');
    });

    // Close modal
    const closeModal = () => {
      modal.classList.add('hidden');
      addressForm.reset();
    };

    closeModalBtn?.addEventListener('click', closeModal);
    cancelBtn?.addEventListener('click', closeModal);

    // Close modal on backdrop click
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Edit address
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        modalTitle.textContent = 'Edit Address';
        // In real app, populate form with address data
        modal.classList.remove('hidden');
      });
    });

    // Delete address
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        if (confirm('Are you sure you want to delete this address?')) {
          const card = btn.closest('.address-card');
          card.style.opacity = '0';
          setTimeout(() => card.remove(), 300);
        }
      });
    });

    // Set default address
    document.querySelectorAll('.set-default-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        // Remove all default badges
        document.querySelectorAll('.address-card').forEach(card => {
          const badge = card.querySelector('.bg-green-100');
          if (badge) badge.remove();
        });

        // Add default badge to clicked card
        const card = btn.closest('.address-card');
        const header = card.querySelector('h3').parentElement;
        const badge = document.createElement('span');
        badge.className = 'inline-block px-2 py-0.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded text-xs font-semibold';
        badge.textContent = 'Default';
        header.appendChild(badge);

        // Hide all set default buttons
        document.querySelectorAll('.set-default-btn').forEach(b => b.classList.remove('hidden'));
        btn.classList.add('hidden');
      });
    });

    // Form submission
    addressForm?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Simulate save
      setTimeout(() => {
        closeModal();
        alert('Address saved successfully!');
      }, 500);
    });
  </script>
</BaseLayout>
