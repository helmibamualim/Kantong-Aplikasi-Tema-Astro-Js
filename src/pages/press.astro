---
import BaseLayout from '../layouts/BaseLayout.astro';

const pressReleases = [
  {
    id: 1,
    title: 'BuildMart Expands Operations with New Distribution Center in Texas',
    date: 'February 8, 2026',
    category: 'Company News',
    excerpt: 'BuildMart announces the opening of a state-of-the-art 200,000 sq ft distribution center in Dallas, enhancing delivery capabilities across the Southwest region.'
  },
  {
    id: 2,
    title: 'BuildMart Launches Sustainable Building Materials Line',
    date: 'January 25, 2026',
    category: 'Product Launch',
    excerpt: 'New eco-friendly product line features recycled materials and carbon-neutral manufacturing, supporting green construction initiatives nationwide.'
  },
  {
    id: 3,
    title: 'BuildMart Achieves Record $500M Revenue in 2025',
    date: 'January 15, 2026',
    category: 'Financial',
    excerpt: 'Company reports 35% year-over-year growth, driven by digital transformation and expanded product offerings in the construction materials sector.'
  },
  {
    id: 4,
    title: 'BuildMart Partners with Leading Construction Technology Platform',
    date: 'December 20, 2025',
    category: 'Partnership',
    excerpt: 'Strategic partnership enables seamless integration between BuildMart\'s inventory system and major project management platforms used by contractors.'
  },
  {
    id: 5,
    title: 'BuildMart Recognized as Top Employer in Construction Industry',
    date: 'December 10, 2025',
    category: 'Awards',
    excerpt: 'Company receives "Best Places to Work" award for outstanding employee benefits, workplace culture, and career development programs.'
  }
];

const mediaFeatures = [
  {
    outlet: 'Construction Today',
    title: 'How BuildMart is Revolutionizing Building Materials E-commerce',
    date: 'January 2026',
    type: 'Feature Article'
  },
  {
    outlet: 'Industry Week',
    title: 'BuildMart CEO Discusses Future of Construction Supply Chain',
    date: 'December 2025',
    type: 'Interview'
  },
  {
    outlet: 'Business Insider',
    title: 'Top 10 Construction Material Suppliers to Watch in 2026',
    date: 'November 2025',
    type: 'List Feature'
  },
  {
    outlet: 'Forbes',
    title: 'BuildMart\'s Digital Strategy Drives Industry Innovation',
    date: 'October 2025',
    type: 'Analysis'
  }
];
---

<BaseLayout title="Press & Media - BuildMart">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-600 via-primary-500 to-orange-500 dark:from-primary-700 dark:via-primary-600 dark:to-orange-600 text-white py-20 sm:py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-72 h-72 bg-white rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 right-10 w-96 h-96 bg-white rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">Press & Media</h1>
        <p class="text-lg sm:text-xl text-white/90 mb-8 leading-relaxed">
          Latest news, press releases, and media resources from BuildMart. For media inquiries, contact our press team.
        </p>
        <a href="mailto:contact@kantongaplikasi.com" class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-600 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-300 hover:scale-105 hover:shadow-2xl">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span>Contact Us</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Press Releases -->
  <section class="py-16 sm:py-20 bg-white dark:bg-dark-900">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Press Releases</h2>
          <p class="text-gray-600 dark:text-gray-400">
            Official announcements and company news from BuildMart
          </p>
        </div>

        <div class="space-y-6">
          {pressReleases.map(release => (
            <article class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-200 dark:border-dark-700">
              <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4">
                <div class="flex-1">
                  <div class="flex flex-wrap items-center gap-3 mb-3">
                    <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-400 rounded-full text-sm font-semibold">
                      {release.category}
                    </span>
                    <span class="text-sm text-gray-500 dark:text-gray-400 flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {release.date}
                    </span>
                  </div>
                  
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                    {release.title}
                  </h3>
                  
                  <p class="text-gray-600 dark:text-gray-400 mb-4">
                    {release.excerpt}
                  </p>
                  
                  <a href={`/press/${release.id}`} class="inline-flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-semibold text-sm group">
                    <span>Read Full Release</span>
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
                
                <div class="flex gap-2">
                  <button class="p-2 hover:bg-gray-200 dark:hover:bg-dark-700 rounded-lg transition-colors" title="Share">
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                    </svg>
                  </button>
                  <button class="p-2 hover:bg-gray-200 dark:hover:bg-dark-700 rounded-lg transition-colors" title="Download PDF">
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </button>
                </div>
              </div>
            </article>
          ))}
        </div>

        <div class="mt-12 text-center">
          <a href="/press/archive" class="inline-flex items-center gap-2 px-6 py-3 border-2 border-primary-600 text-primary-600 dark:text-primary-400 rounded-xl font-semibold hover:bg-primary-50 dark:hover:bg-primary-900/20 transition-all duration-300 hover:scale-105">
            <span>View Press Archive</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Media Coverage -->
  <section class="py-16 sm:py-20 bg-gray-50 dark:bg-dark-800">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">In The News</h2>
          <p class="text-gray-600 dark:text-gray-400">
            Recent media coverage and features about BuildMart
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {mediaFeatures.map(feature => (
            <article class="bg-white dark:bg-dark-900 rounded-xl p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-200 dark:border-dark-700">
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-gradient-to-br from-primary-100 to-orange-100 dark:from-primary-900/30 dark:to-orange-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                  </svg>
                </div>
                
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-2">
                    <span class="text-sm font-semibold text-primary-600 dark:text-primary-400">{feature.outlet}</span>
                    <span class="text-xs text-gray-500 dark:text-gray-400">‚Ä¢</span>
                    <span class="text-xs text-gray-500 dark:text-gray-400">{feature.type}</span>
                  </div>
                  
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                    {feature.title}
                  </h3>
                  
                  <p class="text-sm text-gray-500 dark:text-gray-400 mb-3">{feature.date}</p>
                  
                  <a href="#" class="inline-flex items-center gap-1 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-semibold text-sm">
                    <span>Read Article</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>
  <!-- Press Kit -->
  <section class="py-16 sm:py-20 bg-white dark:bg-dark-900">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Press Kit</h2>
          <p class="text-gray-600 dark:text-gray-400">
            Download our official brand assets, logos, and company information
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Company Overview -->
          <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 border border-gray-200 dark:border-dark-700 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Company Overview</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              Comprehensive company fact sheet and background information
            </p>
            <button class="w-full px-4 py-2 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors flex items-center justify-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              <span>Download PDF</span>
            </button>
          </div>

          <!-- Logo Package -->
          <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 border border-gray-200 dark:border-dark-700 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Logo Package</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              Official BuildMart logos in various formats (PNG, SVG, EPS)
            </p>
            <button class="w-full px-4 py-2 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors flex items-center justify-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              <span>Download ZIP</span>
            </button>
          </div>

          <!-- Product Images -->
          <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 border border-gray-200 dark:border-dark-700 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Product Images</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              High-resolution product photography and lifestyle images
            </p>
            <button class="w-full px-4 py-2 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors flex items-center justify-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              <span>Download ZIP</span>
            </button>
          </div>

          <!-- Executive Bios -->
          <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 border border-gray-200 dark:border-dark-700 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Executive Bios</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              Leadership team biographies and headshots
            </p>
            <button class="w-full px-4 py-2 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors flex items-center justify-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              <span>Download PDF</span>
            </button>
          </div>

          <!-- Brand Guidelines -->
          <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 border border-gray-200 dark:border-dark-700 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Brand Guidelines</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              Official brand usage guidelines and style guide
            </p>
            <button class="w-full px-4 py-2 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors flex items-center justify-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              <span>Download PDF</span>
            </button>
          </div>

          <!-- Complete Press Kit -->
          <div class="bg-gradient-to-br from-primary-50 to-orange-50 dark:from-primary-900/20 dark:to-orange-900/20 rounded-xl p-6 border-2 border-primary-200 dark:border-primary-800 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-600 to-orange-500 rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Complete Press Kit</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              Download all press materials in one comprehensive package
            </p>
            <button class="w-full px-4 py-2 bg-gradient-to-r from-primary-600 to-orange-500 text-white rounded-lg font-semibold hover:from-primary-700 hover:to-orange-600 transition-all duration-300 hover:scale-105 flex items-center justify-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              <span>Download All (25 MB)</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Media Contact -->
  <section class="py-16 sm:py-20 bg-gray-50 dark:bg-dark-800">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Media Contact</h2>
          <p class="text-gray-600 dark:text-gray-400">
            For press inquiries, interviews, or additional information
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Press Contact -->
          <div class="bg-white dark:bg-dark-900 rounded-xl p-8 shadow-lg border border-gray-200 dark:border-dark-700">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            
            <h3 class="text-xl font-bold text-gray-900 dark:text-white text-center mb-2">Press Relations</h3>
            <p class="text-center text-gray-600 dark:text-gray-400 mb-6">Sarah Mitchell, Director of Communications</p>
            
            <div class="space-y-4">
              <a href="mailto:contact@kantongaplikasi.com" class="flex items-center gap-3 text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
